---
import Tag from "./Tag.astro"
import "../styles/global.css"

interface Props {
  projectTitle: string,
  projectDesc: string,
  projectTech: Array<string>
}

const { projectTitle, projectDesc, projectTech } = Astro.props as Props
---

<div class="flex flex-col flex-wrap justify-between items-center h-80 w-90 border-4 border-white">
  <div>
    <h3 class="font-title text-xl text-[var(--title-color)]">{ projectTitle }</h3>
  </div>
  <div>
    <p class="font-text text-[var(--span-color)] text-xl">{ projectDesc }</p>
  </div>
  <div class="flex items-center">
    {
    projectTech.map((tech: string) => (
      <Tag tag={tech} />  
    ))
    }
  </div>
</div>
